# encoding: ASCII
<% if @search_term.nil? %>

    <h1>Please input a search term</h1>

<% else %>

    <h1>Searching for - <%=	 @search_term %></h1>

<% end %>

<% if @recipes.nil? %>

    <p>No courses found with relevant information... Sorry</p>

<% else %>

    <table border="1">
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Rank</th>
      </tr>
      <% @recipes.each do |recipe| %>
          <tr class="<%= cycle('even', 'odd') %>">
            <td><%= link_to(image_tag(recipe['image_url'],size: "100"), recipe['source_url']) %></td>
            <td><%= link_to(sanitize(recipe['title']),recipe['source_url'])  %> </td>
            <td><%= recipe['social_rank'] %></td>
          </tr>
      <% end %>
    </table>

<% end %>